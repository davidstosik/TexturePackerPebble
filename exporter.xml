<exporter version="1.0">     <!-- file format version, must be 1.0 -->
    <name>Pebble</name>
    <nameAlias></nameAlias>
    <displayName>Pebble</displayName>
    <description>Export sprite sheets to use in Pebble's C SDK.</description>
    <version>1.0</version>
    <files>
        <file>
            <name>header</name>
            <displayName>Header file (.h)</displayName>
            <fileExtension>h</fileExtension>
            <description>The sprite sheet's header file.</description>
            <template>spritesheet.h</template>
            <optional>false</optional>
            <hasSeparateAutoSDFiles>first</hasSeparateAutoSDFiles>
            <hasSeparateMultiPackFiles>false</hasSeparateMultiPackFiles>
        </file>
        <file>
            <name>appinfo</name>
            <displayName>Code to add to appinfo.json</displayName>
            <fileExtension>json</fileExtension>
            <description>The piece of code to add to your appinfo.json to declare the sprite sheet resource.</description>
            <template>appinfo.json</template>
            <optional>false</optional>
            <hasSeparateAutoSDFiles>first</hasSeparateAutoSDFiles>
            <hasSeparateMultiPackFiles>false</hasSeparateMultiPackFiles>
        </file>
    </files>
    <supportsTrimming>false</supportsTrimming>
    <supportsRotation>false</supportsRotation>
    <supportsNPOT>true</supportsNPOT>
    <textureSizeFactor>1</textureSizeFactor>
</exporter>
